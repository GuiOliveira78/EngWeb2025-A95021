extends layout 

block content
    .w3-card-4
        header.w3-container.w3-light-blue
            h2 Aluno: #{aluno._id}

        form.w3-container(method="POST")
            fieldset
                legend Dados
                label ID
                input.w3-input.w3-round(type="text" name="id" readonly value= aluno._id)
                label Nome
                input.w3-input.w3-round(type="text" name="nome" value= aluno.nome)
                label Link do Github
                input.w3-input.w3-round(type="text" name="gitlink" value = aluno.gitlink)
            fieldset 
                legend TPC 
            
                each num in [1,2,3,4,5,6]
                    // if tem de responder à estrutura acima em comentário
                    if aluno["tpc"+num] && aluno["tpc"+num] == true
                        input.w3-check(type="checkbox" name="tpc" + num value="1" checked) 
                    else 
                        input.w3-check(type="checkbox" name="tpc" + num value="1") 
                    label TPC #{num}
                    
            br
            // Botões alinhados
            .w3-container(style="display: flex; justify-content: space-between; align-items: center;")
                button.w3-btn.w3-teal.w3-mb-2(type="submit") Submeter
                a.w3-btn.w3-teal.w3-mb-2(href="/alunos/"+aluno._id style="margin-left: auto;") Voltar
            br
        footer.w3-container.w3-light-blue
            h5 Generated by Guilherme Oliveira in #{d}