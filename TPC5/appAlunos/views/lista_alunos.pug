extends layout

block content
    .w3-card-4 
        header.w3-container.w3-light-blue(style="display: flex; justify-content: space-between; align-items: center;")
            h1= title
            a.w3-btn.w3-teal(href="/alunos/add" style="margin-left: auto;") Adicionar Aluno
        .w3-container
            table.w3-table-all
                tr 
                    th Id
                    th Nome
                    th Git Link
                    th Opções
                each aluno in lalunos
                    tr
                        td
                            a(href="/alunos/"+aluno._id)= aluno._id
                        td
                            a(href="/alunos/"+aluno._id)= aluno.nome
                        td 
                            a(href=aluno.gitlink target="_blank")= aluno.gitlink
                        td 
                            a.w3-button.w3-red(href="/alunos/delete/"+aluno._id) Apagar
    footer.w3-container.w3-light-blue
            h5 Generated by Guilherme Oliveira in #{d}