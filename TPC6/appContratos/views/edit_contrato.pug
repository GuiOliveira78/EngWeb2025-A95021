extends layout 

block content
    .w3-card-4.w3-margin
        header.w3-container.w3-light-blue
            h2 📜 Contrato: #{contrato._id}

        .w3-container
            .w3-row-padding
                .w3-col.m6
                    .w3-padding.w3-border-bottom
                        strong 🆔 ID: 
                        input.w3-input.w3-round(type="text" name="id" readonly value= contrato._id)
                    
                    .w3-padding.w3-border-bottom
                        strong 📢 Número do Anúncio:
                        input.w3-input.w3-round(type="text" name="nAnuncio" value= contrato.nAnuncio)

                    .w3-padding.w3-border-bottom
                        strong ⚖️ Tipo de Procedimento: 
                        input.w3-input.w3-round(type="text" name="tipoprocedimento" value= contrato.tipoprocedimento)

                    .w3-padding.w3-border-bottom
                        strong 📆 Data de Publicação: 
                        input.w3-input.w3-round(type="text" name="dataPublicacao" value= contrato.dataPublicacao)
                    
                    .w3-padding.w3-border-bottom
                        strong 🏷️ Objeto do Contrato: 
                        input.w3-input.w3-round(type="text" name="objectoContrato" value= contrato.objectoContrato)

                .w3-col.m6
                    .w3-padding.w3-border-bottom
                        strong 📅 Data de Celebração: 
                        input.w3-input.w3-round(type="text" name="dataCelebracaoContrato" value= contrato.dataCelebracaoContrato)

                    .w3-padding.w3-border-bottom
                        strong 💰 Preço Contratual: 
                        input.w3-input.w3-round(type="text" name="precoContratual" value= contrato.precoContratual)

                    .w3-padding.w3-border-bottom
                        strong ⏳ Prazo de Execução: 
                        input.w3-input.w3-round(type="text" name="prazoExecucao" value= contrato.prazoExecucao)

                    .w3-padding.w3-border-bottom
                        strong 🏢 Entidade Comunicante: 
                        input.w3-input.w3-round(type="text" name="entidade_comunicante" value= contrato.entidade_comunicante)

                    .w3-padding.w3-border-bottom
                        strong 🏢 NIPC da Entidade Comunicante: 
                        input.w3-input.w3-round(type="text" name="entidade_comunicante" value= contrato.NIPC_entidade_comunicante)
                    
                    .w3-padding.w3-border-bottom
                        strong 📜 Fundamentação: 
                        input.w3-input.w3-round(type="text" name="fundamentacao" value= contrato.fundamentacao)
            
            br
            // Botões estilizados
            .w3-container.w3-padding(style="display: flex; justify-content: space-between; align-items: center;")
                button.w3-btn.w3-teal.w3-mb-2.w3-round(type="submit") ✅ Submeter
                a.w3-button.w3-gray.w3-round(href="/contratos/"+contrato._id style="margin-left: auto;") 🔙 Voltar
            
        footer.w3-container.w3-light-blue
            h5 📄 Generated by Guilherme Oliveira in #{d}

            
