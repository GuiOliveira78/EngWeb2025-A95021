extends layout

block content
    .w3-card-4.w3-margin
        header.w3-container.w3-light-blue(style="display: flex; justify-content: space-between; align-items: center;")
            h1= title
            a.w3-btn.w3-teal.w3-round(href="/contratos/add" style="margin-left: auto;") Adicionar Contrato
        .w3-container
            table.w3-table-all
                tr 
                    th ID
                    th Tipo de Procedimento
                    th Data de Publicação
                    th Entidade Comunicante
                each contrato in lcontratos
                    tr
                        td
                            a(href="/contratos/"+contrato._id)= contrato._id
                        td= contrato.tipoprocedimento
                        td= contrato.dataPublicacao
                        td= contrato.entidade_comunicante
                        
    footer.w3-container.w3-light-blue
            h5 Generated by Guilherme Oliveira in #{d}

