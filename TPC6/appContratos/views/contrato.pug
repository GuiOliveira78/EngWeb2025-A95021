extends layout 

block content
    .w3-card-4.w3-margin
        header.w3-container.w3-light-blue
            h2 📜 Contrato: #{contrato._id}

        .w3-container
            .w3-row-padding
                .w3-col.m6
                    .w3-padding.w3-border-bottom
                        strong 🆔 ID: 
                        span #{contrato._id}
                    
                    .w3-padding.w3-border-bottom
                        strong 📢 Número do Anúncio: 
                        span #{contrato.nAnuncio}

                    .w3-padding.w3-border-bottom
                        strong ⚖️ Tipo de Procedimento: 
                        span #{contrato.tipoprocedimento}

                    .w3-padding.w3-border-bottom
                        strong 📆 Data de Publicação: 
                        span #{contrato.dataPublicacao}
                    
                    .w3-padding.w3-border-bottom
                        strong 🏷️ Objeto do Contrato: 
                        span #{contrato.objectoContrato}

                .w3-col.m6
                    .w3-padding.w3-border-bottom
                        strong 📅 Data de Celebração: 
                        span #{contrato.dataCelebracaoContrato}

                    .w3-padding.w3-border-bottom
                        strong 💰 Preço Contratual: 
                        span #{contrato.precoContratual} €

                    .w3-padding.w3-border-bottom
                        strong ⏳ Prazo de Execução: 
                        span #{contrato.prazoExecucao} dias

                    .w3-padding.w3-border-bottom
                        strong 🏢 Entidade Comunicante: 
                        span #{contrato.entidade_comunicante} (NIPC: #{contrato.NIPC_entidade_comunicante})

                    .w3-padding.w3-border-bottom
                        strong 📜 Fundamentação: 
                        span #{contrato.fundamentacao}
            
            br
            // Botões estilizados
            .w3-container.w3-padding(style="display: flex; justify-content: space-between; align-items: center;")
                a.w3-button.w3-teal.w3-round(href="/contratos/edit/" + contrato._id) ✏️ Editar
                a.w3-button.w3-red.w3-round(href="/contratos/delete/"+contrato._id) ❌ Apagar
                a.w3-button.w3-gray.w3-round(href="/contratos" style="margin-left: auto;") 🔙 Voltar
            
        footer.w3-container.w3-light-blue
            h5 📄 Generated by Guilherme Oliveira in #{d}

            
