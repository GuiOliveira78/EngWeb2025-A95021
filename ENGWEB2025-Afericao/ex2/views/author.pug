

extends layout

block content
    .w3-card-4.w3-margin
        header.w3-container.w3-light-blue
            h2 🧑‍💼 Autor: #{author.name} (ID: #{author._id})

        .w3-container.w3-padding
            h3 📚 Livros deste autor

            if books.length
                table.w3-table-all.w3-hoverable
                    thead
                        tr
                            th Título
                            th Série
                            th Rating
                            th Formato
                            th Editora
                            th Publicação
                    tbody
                        each book in books
                            tr
                                td 
                                    a(href=`/${book._id}`)= book.title
                                td= book.series || "-"
                                td= book.rating
                                td= book.bookFormat
                                td= book.publisher
                                td= book.publishDate
            else
                p Nenhum livro encontrado para este autor.

            .w3-padding.w3-border-top
                strong Total de livros: 
                span= books.length

            .w3-container.w3-padding(style="text-align:right")
                a.w3-button.w3-gray.w3-round(href="/") 🔙 Voltar

    footer.w3-container.w3-light-blue
        h5 📄 Generated by Guilherme Oliveira in #{d}