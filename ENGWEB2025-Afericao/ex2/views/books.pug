extends layout

block content
    .w3-card-4.w3-margin
        header.w3-container.w3-light-blue(style="display: flex; justify-content: space-between; align-items: center;")
            h1= title
            //a.w3-btn.w3-teal.w3-round(href="/books/add" style="margin-left: auto;") Adicionar Livro
        br
        .w3-container(style="display: flex; justify-content: space-between; align-items: center;")
            table.w3-table-all(style="width: 100%; text-align: left; table-layout: fixed; word-wrap: break-word;")
                tr 
                    th(style="word-break: break-word;") ID
                    th(style="word-break: break-word;") Título
                    th(style="word-break: break-word;") Autor
                    th(style="word-break: break-word;") Data de Publicação
                    th(style="word-break: break-word;") Páginas

                each book in lbooks
                    tr
                        td(style="word-break: break-word;")
                            a(href="/"+book._id)= book._id
                        td(style="word-break: break-word;")= book.title
                        td(style="word-break: break-word;")
                            each a, index in book.author
                                a(href=`/entidades/${a._id}`)= a.name
                                if index != book.author.length - 1
                                    | , 
                        td(style="word-break: break-word;")= book.publishDate
                        td(style="word-break: break-word;")= book.pages
        br
    footer.w3-container.w3-light-blue
            h5 Generated by Guilherme Oliveira in #{d}