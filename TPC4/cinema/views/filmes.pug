extends layout

block content
    .w3-card-4 
        header.w3-container.w3-blue
            h1= title
        .w3-container
            table.w3-table-all
                tr 
                    th Ano
                    th Título
                    th Elenco
                    th Géneros
                    th Opções
                each filme in lfilmes 
                    tr
                        td= filme.year
                        td= filme.title
                        td
                            ul.w3-ul
                                each actor in filme.cast
                                    li
                                        a(href="/filmes/"+actor)= actor
                        td
                            ul.w3-ul
                                each genre in filme.genres
                                    li= genre
                        td 
                            a.w3-button.w3-green(href="/filmes/edit/"+filme.id) Editar
                            a.w3-button.w3-red(href="/filmes/delete/"+filme.id) Apagar
    footer.w3-container.w3-blue
